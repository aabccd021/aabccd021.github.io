{
  "ci": {
    "collect": {
      "staticDistDir": "./_site",
      "settings": {
        "onlyCategories": [
          "accessibility",
          "best-practices",
          "seo"
        ]
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:accessibility": [
          "error",
          {
            "minScore": 1
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 1
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 1
          }
        ]
      }
    }
  }
}
